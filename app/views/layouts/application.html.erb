<!DOCTYPE html>
<html>
<head>
  <title>DoctorScheduler</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
	<div id="sidebar">
		<h2 id="logo"><%= link_to "Doctor Scheduler", root_path %></h2>
		<ul id="navbar">
			<% @doctors.each do |doctor| %>
				<li><%= link_to doctor.name, doctor_path(doctor)%></li>
			<% end %>
		</ul>
	</div>

	<div id="main">
		<%= yield %>
	</div>
	<div class="clearFix"></div>
</div>
</body>
</html>
